{
  "project": {
    "name": "Arslandede Köyü Derneği Web Sitesi",
    "version": "1.0.0",
    "type": "Next.js Web Application",
    "description": "Bayburt Arslandede Köyü Derneği resmi web sitesi"
  },
  "structure": {
    "pages": {
      "home": "/",
      "about": {
        "village": "/about/village/*",
        "association": "/about/*"
      },
      "news": "/news",
      "projects": "/projects",
      "contact": "/contact"
    },
    "components": {
      "layout": ["Header", "Footer", "Navbar"],
      "common": ["Hero", "SearchBar", "Button"],
      "features": ["NewsSection", "ProjectList", "ContactForm"]
    }
  },
  "features": {
    "seo": true,
    "responsive": true,
    "authentication": false,
    "imageOptimization": true
  },
  "dependencies": {
    "framework": "Next.js 14",
    "styling": "SCSS Modules",
    "icons": "React Icons"
  },
  "testing": {
    "framework": "Jest",
    "coverage": {
      "statements": 80,
      "branches": 80,
      "functions": 80,
      "lines": 80
    },
    "setupFiles": ["jest.setup.js"],
    "testMatch": ["**/__tests__/**/*.test.{js,jsx,ts,tsx}"]
  },
  "optimization": {
    "imageLoading": "lazy",
    "codeSplitting": true,
    "performance": {
      "caching": true,
      "compression": true
    }
  }
} 