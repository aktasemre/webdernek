      "about": ["VillageContent", "BoardMembers", "Timeline"],
      "news": ["NewsList", "NewsDetail", "CategoryFilter"],
      "projects": ["ProjectList", "ProjectDetail", "StatusFilter"],
      "contact": ["ContactInfo", "SocialLinks", "Map"]
